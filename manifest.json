{
  "manifest_version": 3,
  "name": "Custom CSS Injector",
  "version": "1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "72": "icons/icon72.png",
      "128": "icons/icon128.png"
    }
  }
}
